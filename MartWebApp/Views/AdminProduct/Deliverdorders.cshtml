@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml"; // Aapki layout file
    ViewData["Title"] = "Deliverdorders"; // Page ka title
    @model IEnumerable<BillingDetails>
}
<a href="@Url.Action("Pendingorders")">
    <button type="button" class="btn btn-warning">Pending</button>
</a>
<a href="@Url.Action("Deliverdorders")">
    <button type="button" class="btn btn-primary">Deliverd</button>
</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
            <th scope="col">Contact</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            
               
                <td>@item.FirstName  @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Telephone</td>
                <td>@item.status</td>
                @if(item.status == 0)
                {
                    <td><button type="button" class="btn btn-success">Confirm Order</button></td>
                }
        </tr>
        }
    </tbody>
</table>
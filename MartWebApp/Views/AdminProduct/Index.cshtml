@model IEnumerable<MartWebApp.Models.Product>
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@if (TempData["updateMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["updateMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["SucessfullyDelete"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SucessfullyDelete"]
    </div>
}

@if (TempData["Issue While Delete"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Issue While Delete"]
    </div>
}
@if (TempData["404"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["404"]
    </div>
}
@if (TempData["idissue"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["idissue"]
    </div>
}


<button type="button" class="btn btn-success"> <a asp-action="AddProduct"> Add product   </a> </button>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product Name</th>
            <th scope="col">Stock Quantity</th>
            <th scope="col">Images</th>
            <th scope="col">Action</th>

           
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.StockQuantity</td>
                <td>
                    @foreach (var image in item.ProductImages)
                    {
                        <img src="@image.ImageUrl" style="width: 100px; height: auto; margin-right: 5px;" />
                    }
                </td>


                <td>

                    <a asp-action="Delete" asp-controller="AdminProduct" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">
                        Delete
                        </a>
                    | <a asp-action="Edit" asp-controller="AdminProduct" asp-route-id="@item.Id" class="btn btn-warning" >
                        Edit
                    </a>
                       
                 
                </td>
            </tr>
        }
       
    </tbody>
</table>
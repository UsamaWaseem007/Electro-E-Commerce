@{
    Layout = "~/Views/Shared/login-Register.cshtml";
}
  <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top:300px;
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input[type="email"], input[type="password"] {
            margin: 10px 0;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            padding: 10px;
            font-size: 16px;
            background-color: #ff4747;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #ff3636;
        }

        .register-link {
            text-align: center;
            margin-top: 20px;
        }

        .register-link a {
            color: #ff4747;
            text-decoration: none;
        }

        .register-link a:hover {
            text-decoration: underline;
        }
    </style>




    <div class="container">
        <h2>Login</h2>
        <form asp-action="Login" method="POST">
            
        @if (TempData["invalid"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["invalid"]
            </div>
        }
        @if (TempData["Registration"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Registration"]
            </div>
        }
            <input type="email" name="email" placeholder="Email Address" required>
            <input type="password" name="password" placeholder="Password" required>
        
            <button type="submit">Login</button>
        </form>

        <div class="register-link">
        <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register Here</a></p>
        </div>
    </div>
